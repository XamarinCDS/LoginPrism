<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginPrism.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Entry Placeholder="Usuario" Text="{Binding Usuario}"/>
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Clave}"/>
        <Button Text="Iniciar Sesion" BackgroundColor="MediumTurquoise" TextColor="White" Command="{Binding LoginCommand}"/>
    </StackLayout>
</ContentPage>